{
  "name": "rxweb",
  "version": "0.0.0-development",
  "scripts": {
    "commit": "git-cz",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --code-coverage --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release",
    "build:validators": "ng-packagr -p ./packages/reactive-form-validators/package.json"
  },
  "dependencies": {
    "@angular/animations": "~12.0.1",
    "@angular/common": "~12.0.1",
    "@angular/compiler": "~12.0.1",
    "@angular/core": "~12.0.1",
    "@angular/forms": "~12.0.1",
    "@angular/platform-browser": "~12.0.1",
    "@angular/platform-browser-dynamic": "~12.0.1",
    "@angular/router": "~12.0.1",
    "@angular/service-worker": "^12.0.1",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^4.0.0",
    "@rxweb/dom": "0.0.3",
    "@rxweb/localization": "0.0.2-beta2",
    "@rxweb/reactive-form-validators": "^1.9.2",
    "@rxweb/translate": "^1.0.14",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.5",
    "core-js": "2.6.5",
    "cz-conventional-changelog": "^2.1.0",
    "ng-packagr": "^12.0.0",
    "rxjs": "~6.6.7",
    "rxjs-compat": "^6.4.0",
    "time-ago-pipe": "^1.3.2",
    "tslib": "^2.2.0",
    "validate-commit-msg": "^2.14.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.1",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "~12.0.1",
    "@angular/language-service": "~12.0.1",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "semantic-release": "^19.0.3",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test",
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxweb/rxweb.git"
  }
}
